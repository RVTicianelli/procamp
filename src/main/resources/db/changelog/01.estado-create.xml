<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="01" author="Rafael">

		<createTable tableName="ESTADO"
			remarks="Tabela que contem estados e Siglas">

			<column name="ID" type="int">
				<constraints primaryKey="true" unique="true"/>
			</column>

			<column name="NOME" type="varchar(40)">
				<constraints unique="false" nullable="false" />
			</column>

			<column name="UF" type="varchar(2)">
				<constraints unique="false" nullable="false" />
			</column>

		</createTable>

	</changeSet>
	
	<changeSet id="01.1" author="Rafael">
		<addAutoIncrement catalogName="procamp"
			columnDataType="int" columnName="ID" incrementBy="1"
			schemaName="public" startWith="1" tableName="ESTADO" />
	</changeSet>

</databaseChangeLog>